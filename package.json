{
  "name": "turbo-challenge",
  "private": true,
  "scripts": {
    "local": "turbo local",
    "test": "turbo test",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "build:local": "turbo build:local",
    "build:dev": "turbo build:dev",
    "build:prod": "turbo build:prod",
    "deploy": "turbo clean:dockerize; turbo clean:build; turbo build:local && turbo dockerize",
    "dockerize": "turbo dockerize",
    "publish:ui": "turbo @repo/ui#publish",
    "clean": "turbo clean && rm -rf ./node_modules && rm -rf ./.turbo",
    "clean:build": "turbo clean:build && rm -rf ./.turbo",
    "clean:dockerize": "turbo clean:dockerize",
    "format": "prettier --write \"**/*.{js,json,ts,tsx,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,ts,tsx,md}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "3.2.5",
    "turbo": "^1.13.0"
  },
  "packageManager": "npm@10.5.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "lint-staged": {
    "*.{js,json,ts,tsx,md}": [
      "npm run format:check"
    ],
    "relative": [
      "package.json",
      "apps/**/package.json",
      "packages/**/package.json"
    ]
  }
}
