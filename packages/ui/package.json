    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.2.1",
    "path": "^0.12.7",
    "styled-components": "^6.1.8",
    "typescript": "^5.3.3",
    "vite": "^5.2.6",
    "vite-plugin-dts": "^3.7.3",
    "vite-tsconfig-paths": "^4.3.2"
  }
