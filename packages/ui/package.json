{
  "name": "@repo/ui",
  "private": false,
  "version": "0.1.0",
  "type": "module",
  "files": [
    "dist"
  ],
  "types": "./dist/index.d.ts",
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.es.js",
  "exports": {
    ".": [
      "./src/index.ts",
      {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.es.js",
        "require": "./dist/index.cjs.js"
      }
    ]
  },
  "scripts": {
