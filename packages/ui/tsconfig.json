{
  "extends": "@repo/typescript-config/react-library.json",
  "compilerOptions": {
    "types": ["@testing-library/jest-dom"],
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@styles/*": ["src/styles/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist", ".turbo", "**/*.js"]
}
